{
	"include": [
		"src",
		"tests"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": ".",
		"target": "es2018",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		],
		"compilerOptions": {
			"module": "commonjs"
		}
	},
	"typedocOptions": {
		"entryPoints": [
			"src/index.ts"
		],
		"out": "docs"
	}
}